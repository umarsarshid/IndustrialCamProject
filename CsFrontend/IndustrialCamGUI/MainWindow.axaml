<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="IndustrialCamGUI.MainWindow"
        Title="Industrial Camera Controller" Width="800" Height="600">
    <Grid RowDefinitions="*, Auto">
        <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="2" Margin="10">
            <Image Name="CameraFeed" Stretch="Uniform" />
        </Border>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="20" Margin="10" Background="#000000ff">
            <Button Name="BtnConnect" Content="Connect" Click="OnConnect" />
            <StackPanel VerticalAlignment="Center" Width="200">
                 <TextBlock Text="Exposure" />
                 <Slider Name="SliderExposure" Minimum="0" Maximum="100" Value="50" 
                         ValueChanged="OnExposureChanged"/>
            </StackPanel>
            <CheckBox Name="ChkTrigger" Content="Trigger Mode" IsCheckedChanged="OnTriggerModeChanged"/>
            <Button Name="BtnTrigger" Content="FIRE" IsEnabled="False" Click="OnSoftwareTrigger"/>
            <Button Name="BtnBug" Content="âš  Simulate Leak" Background="Red" Click="OnBugToggle"/>
        </StackPanel>
    </Grid>
</Window>